<div class="jumbotron">

  <div class="container text-center">
    <h1 class="display-2">Burgers!</h1>
    <img src="/assets/img/burger_sandwich_PNG4132.png" alt="hamburger" style="width: 300px">
    <br>
    <br>
    <h2 class="lead">Create and eat virtual burgers...for free!</h2>
    <br>
    <form class="create-form">

      <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="name">
        <button type="submit" class="btn btn-warning btn-sm">Make Burger</button>
      </div>

      
    </form>
  </div>

  <div class="row">
    <div class="col-md-6 text-center">
      <h1 class="display-4">made:</h1>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6 text-center">
      <h1 class="display-4">eaten:</h1>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  
</div>